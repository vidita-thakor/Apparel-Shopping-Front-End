<script type="text/javascript">
    $(document).ready(function () {
        $("#billEqualShip").click(function () {
          
            if ($('#billEqualShip').is(":checked")) {
                alert("Test in");
                $('#ShippingAddress').val($('#CustomerAddress').val());
                $('#ShippingCity').val($('#CustomerCity').val());
                $('#ShippingState').val($('#CustomerState').val());
                $('#ShippingZip').val($('#CustomerZip').val());
            }
            else
            {
                $('#ShippingAddress').val("");
                $('#ShippingCity').val("");
                $('#ShippingState').val("");
                $('#ShippingZip').val("");
            }
        })
    });
</script>
